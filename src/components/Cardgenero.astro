---
interface Props {
	title: string;
	href: string;
	imgSrc: string;
}

const { href, title, imgSrc } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img src={imgSrc} alt="">
		<h2 class="sm:text-sm">
			{title}
		</h2>
	</a>
</li>



<style>
	.link-card {
		width: 150px;
		height: auto;
		list-style: none;
	}
	.link-card > a {
		width: 100%;
		height: fit-content;
		display: flex;
		flex-direction: column;
		align-items: start;
		text-decoration: none;
		color: #f1f1f1;
	}
	.link-card > img{
		width: 100%;
		height: 50%;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
