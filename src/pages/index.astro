---
import Layout from '../layouts/Layout.astro';
import Cardgenero from '../components/Cardgenero.astro';
import Cardsong from '../components/Cardsong.astro';
---

<Layout title="RM Beats">
	<main>

		<section class="hero-container">

			<div class="hero-logo">
				<img class="hero-logo__img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQQFhRyQkjaejAbb_f5QFi6RaT3MqpuVhm8Z67bSmcH9w&s" alt="">
			</div>

			<h1 class="sm:text-2xl sm:font-semibold text-white">RMBeats</h1>

			<p class="w-full text-white sm:text-lg sm:text-center">Convierte tu teléfono en un estudio de grabación completo con nuestra aplicación revolucionaria</p>

			<div class="flex w-full sm:items-center sm:justify-between sm:p-2">

				<div class="flex items-center justify-center gap-1 sm:text-xl text-instagram">
					<ion-icon name="logo-instagram"></ion-icon>
					<span class="m-0 p-0">Instagram</span>
				</div>

				<div class="flex items-center justify-center gap-1 sm:text-xl text-principal">
					<ion-icon name="logo-youtube"></ion-icon>
					<span>Youtube</span>
				</div>
				
			</div>

		</section>

		<div class="main-background">

			<h2 class="text-white sm:pl-3 sm:text-xl sm:font-semibold">Géneros</h2>
			<div class="flex flex-col items-start sm:gap-3 w-11/12 sm:m-auto sm:py-1 sm:text-2xl sm:font-semibold text-white overflow-x-auto">
				<ul class="w-100 flex items-center gap-3">
					<Cardgenero title="TRAP" href="#" imgSrc="https://github.com/rezequielf01/rmbeats/blob/main/src/images/trap-portada.jpg?raw=true"/>
					<Cardgenero title="RAP" href="#" imgSrc="https://github.com/rezequielf01/rmbeats/blob/main/src/images/trap-portada.jpg?raw=true"/>
					<Cardgenero title="RKT" href="#" imgSrc="https://github.com/rezequielf01/rmbeats/blob/main/src/images/trap-portada.jpg?raw=true"/>
					<Cardgenero title="Boom Bap" href="#" imgSrc="src/images/https://github.com/rezequielf01/rmbeats/blob/main/src/images/trap-portada.jpg?raw=true"/>
				</ul>
			</div>
	
			<h2 class="text-white sm:pl-3 sm:text-xl sm:font-semibold sm:mt-5">Nuestra playlist</h2>
			<section class="w-full sm:mt-2">
				<ul class="w-full flex flex-col gap-1 items-start justify-start">
					<Cardsong title="Chill fresh" genero='TRAP' srcBeat='https://github.com/rezequielf01/rmbeats/blob/main/src/audios/trap-flowdeoro.mp3' href="#" imgSrc="https://github.com/rezequielf01/rmbeats/blob/main/src/images/trap-portada.jpg?raw=true"/>
					<Cardsong title="Agressive" genero='RAP' srcBeat='https://github.com/rezequielf01/rmbeats/blob/main/src/audios/beat.mp3' href="#" imgSrc="src/images/trap-portada.jpg"/>
					<Cardsong title="420 whit coffe" genero='HIP HOP' srcBeat='src/audios/beat.mp3' href="#" imgSrc="src/images/trap-portada.jpg"/>
				</ul>
			</section>

		</div>

	</main>
</Layout>

<style>
	main {
		margin: 0 auto;
		padding: 0;
		box-sizing: border-box;
		padding: 0;
		}
	
	.hero-container{
		padding: 2rem;
		width: 100%;
		height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: 15px;
		background: linear-gradient(to bottom,rgba(0, 0, 0, 0.7)50% ,#0c0c0c 80%),url(../images/hero-xl.jpg) no-repeat center / cover;
	}
	.hero-logo{
		width: 125px;
		height: 125px;
		border-radius: 50%;
		box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
	}
	.hero-logo__img{
		width: 100%;
		height: 100%;
		border-radius: 50%;
	}
	.main-background{
		background: #1c1c1c;
		border-radius: 35px 35px 0 0;
		padding-top: 10px;
	}
</style>
